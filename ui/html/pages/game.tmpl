{{define "title"}}Car MMO{{end}} 
{{define "main"}}
    <div class="game-container">
        <div id="gameCanvas"></div>
        <div class="game-controls">
            <h3>Controls:</h3>
            <p>W/Arrow Up: Accelerate</p>
            <p>S/Arrow Down: Brake</p>
            <p>A/Arrow Left: Steer Left</p>
            <p>D/Arrow Right: Steer Right</p>
            <p>Space: Handbrake</p>
        </div>
    </div>
    <script nonce="{{.Nonce}}">const playerId = "{{.PlayerID}}";</script>
    <script type="module" nonce="{{.Nonce}}" src="/static/game/game.bundle.js"></script>
{{end}}
